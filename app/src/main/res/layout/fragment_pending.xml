<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.donars.srp.bloodbank.FragmentNotification"
    android:background="@color/accent"
    android:orientation="vertical"
    >

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:choiceMode="singleChoice"
        android:layout_weight="4.5"
        />
    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO Notifications..AVAILABLE!"
        android:layout_gravity="center_vertical"
        android:textColor="#525252"
        android:textSize="19.0sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/md_red_400"
        android:layout_weight="0.7"
        android:id="@+id/btm_bar"
        android:visibility="invisible">
        <android.support.v7.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/delete_btn"
            android:text="Cancel Donor Request"
            android:textColor="@color/white"
            android:padding="6dp"
            android:background="@color/md_red_400"
            android:gravity="center"
            android:layout_weight=".35"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/completed_btn"
            android:text="Accept  Donor Request"
            android:padding="6dp"
            android:textColor="@color/white"
            android:background="@color/md_red_400"
            android:gravity="center"
            android:layout_weight=".35"/>
    </LinearLayout>
</LinearLayout>
